category Resource {
  asset EnterpriseResource {
    | Access
  }

  asset AccessPolicies extends EnterpriseResource {
    | Access
  }
}

category Credentials {
  asset UserCredentials {
    | Compromise
      -> user.RequestAccess
  }
}

associations {
  //User [users] * <-- requestAccess --> 1 [pep] PEP
  User [user] 1 <-- uses --> * [devices] Device
  //PEP [pep] 1 <-- forwardsRequest --> 1 [pa] PA
  //PA [pa] 1 <-- consults --> 1 [pe] PE
  //PEP [pep] 1 <-- allowsAccess --> * [resource] EnterpriseResource
  UserCredentials [userCredentials] 1 <-- userCredentials --> 1 [user] User
  Device [device] 1 <-- associatedDevice --> 1 [agent] Agent
  User [User] 1 <-- associatedUser --> 1 [agent] Agent
  //PE [pe] 1 <-- associatedPE --> * [agent] Agent
  Agent [agent] * <-- allowsAccess --> 1 [resource] EnterpriseResource
}

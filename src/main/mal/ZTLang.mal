#id: "org.mal-lang.ztlang"
#version: "1.0.0"


category User {
  asset User {
    & RequestAccess
      //-> pep.ForwardAccessRequestToPA
      -> agent.FormAgent
  }
}

category Device {
  asset Device {
    | Compromise
      -> user.RequestAccess

    # Untrusted [Enabled]
      -> agent.RequirementsFulfilled
  }
}

category Agent {
  asset Agent {
    | FormAgent
      -> RequirementsFulfilled

    & RequirementsFulfilled
      //-> pe.GrantTrustedScore
      -> resource.Access
  }
}

